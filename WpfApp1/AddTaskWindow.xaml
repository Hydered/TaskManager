<Window x:Class="TaskManagerApp.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить задачу" Height="300" Width="400">
    <Grid>
        <TextBox x:Name="TitleTextBox" Margin="10,10,10,200" Text="Название задачи" />
        <TextBox x:Name="DescriptionTextBox" Margin="10,50,10,150" Text="Описание задачи" />
        <ComboBox x:Name="PriorityComboBox" Margin="10,90,10,100">
            <ComboBoxItem Content="Низкий" />
            <ComboBoxItem Content="Средний" />
            <ComboBoxItem Content="Высокий" />
        </ComboBox>
        <Button x:Name="SaveButton" Content="Сохранить" Margin="10,184,200,10" Click="SaveButton_Click" />
        <Button x:Name="CancelButton" Content="Отмена" Margin="200,184,10,10" Click="CancelButton_Click" />
    </Grid>
</Window>